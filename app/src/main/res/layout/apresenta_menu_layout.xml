<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApresentaMenuActivity">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTabLayout"
        android:contentDescription="Lista_tb">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O QUE É?"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARACTERÍSTICAS"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMART CITIES"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOBRE"/>

    </com.google.android.material.tabs.TabLayout>

    <ImageView
        android:layout_marginTop="80dp"
        android:id="@+id/mImagemMenu"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/caphumano" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="O capital humano é um indicador voltado à cultura e educação de qualidade.
Neste caso, são analisados: o número de universidades, escolas, museus, galerias de artes, ambientes de lazer e demais locais que contribuem para a educação e cultura da sociedade.
 " />


</LinearLayout>